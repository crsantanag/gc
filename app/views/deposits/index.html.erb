<% content_for :title, "Deposits" %>

<style>
  .table-fixed {
    table-layout: fixed;
    width: 100%;}
  .table-fixed th,
  .table-fixed td {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;}
  .w-10 { width: 10%; }
  .w-15 { width: 15%; }
  .w-40 { width: 40%; }
  .w-20 { width: 20%; }
  .text-end { text-align: right; }
</style>

<%= link_to "Registrar ingreso", new_deposit_path(request.query_parameters), class:"mb-3 col-6 col-sm-4 col-md-2 col-lg-2 btn btn-info" %>

<h2> Detalle de ingresos</h2>

<%= form_with url: deposits_path, method: :get, local: true do %>
  <div class="row mb-3">

    <!-- Columna 1: Fecha -->
    <div class="col-md-3">
      <div class="row">
        <div class="col-md-6">
          <%= label_tag :from_month, "Desde" %>
          <%= select_tag :from_month,
                options_for_select((1..12).map { |m| [I18n.t("date.month_names")[m], m] }, @from_date.month),
                class: "form-control mb-1 border border-2 border-secondary-subtle rounded" %>
        </div>
        <div class="col-md-6">
          <%= label_tag :to_month, "Hasta" %>
          <%= select_tag :to_month,
              options_for_select((1..12).map { |m| [I18n.t("date.month_names")[m], m] }, @to_date.month),
              class: "form-control mb-1 border border-2 border-secondary-subtle rounded" %>
        </div>
      </div>
    </div>

    <!-- Columna 2: Agrupar por -->
    <div class="col-md-3">
      <%= label_tag :grouping, "Agrupar por" %><br>
      <div class="form-check">
        <%= radio_button_tag :grouping, "by_apartment_date", params[:grouping] == "by_apartment_date" || params[:grouping].blank?, id: "grouping_by_apartment_date", class: "form-check-input border border-2 border-secondary-subtle rounded" %>
        <%= label_tag :grouping_by_apartment_date, "Departamento / Fecha", class: "form-check-label" %>
      </div>
      <div class="form-check">
        <%= radio_button_tag :grouping, "by_apartment_type", params[:grouping] == "by_apartment_type", id: "grouping_by_apartment_type", class: "form-check-input border border-2 border-secondary-subtle rounded" %>
        <%= label_tag :grouping_by_apartment_type, "Departamento / Tipo de ingreso", class: "form-check-label" %>
      </div>
      <div class="form-check">
        <%= radio_button_tag :grouping, "by_month", params[:grouping] == "by_month", id: "grouping_by_month", class: "form-check-input border border-2 border-secondary-subtle rounded" %>
        <%= label_tag :grouping_by_month, "Mes", class: "form-check-label" %>
      </div>
    </div>

    <!-- Columna 3: Acciones -->
    <div class="col-md-3 d-flex flex-column justify-content-end">
      <%= submit_tag "Filtrar", class: "col-6 btn btn-primary mb-2" %>
      <%= link_to "Limpiar", deposits_path, class: "col-6 btn btn-secondary" %>
    </div>
  </div>
<% end %>

<div class="py-3">
  <%= link_to "Exportar PDF", deposits_path(format: :pdf), class: "col-6 col-sm-4 col-md-2 col-lg-2 btn btn-secondary" %>
</div>

<div data-controller="confirm-delete-modal">

  <div class="table-responsive">
      <% grouping = params[:grouping] || "by_apartment_date" %>

      <% if grouping == "by_apartment_type" %>

        <% grouped = @deposits.joins(:apartment)
                              .order("apartments.number ASC, deposits.tipo_ingreso ASC,   deposits.date ASC")
                              .group_by(&:apartment)
                              .sort_by { |a, _| a.number } %>

        <% grouped.each do |apartment, deposits| %>
          <h3 class="mt-4">Departamento <%= apartment.number %></h3>

          <table class="table table-bordered table-striped">
            <thead>
              <tr class="table-primary">
                <th scope="col" class="col-1">FECHA</th>
                <th scope="col" class="col-3">COMENTARIO</th>
                <th scope="col" class="col-2">MES / TIPO INGRESO</th>
                <th scope="col" class="col-1 text-end">MONTO</th>
                <th scope="col" class="col-1 text-center">ACCIÓN</th>
              </tr>
            </thead>
            <tbody>
              <% deposits.group_by(&:tipo_ingreso).each do |tipo, tipo_deposits| %>
                <tr class="table-light">
                  <td colspan="5" class="fw-bold"> 
                    <p><strong>Tipo de ingreso:</strong> <%= nombre_tipo_ingreso(tipo) %></p>
                  </td>
                </tr>
                <% tipo_deposits.each do |deposit| %>
                  <tr>
                    <td>
                      <%= link_to deposit.date.strftime("%d-%m-%Y"), edit_deposit_path(deposit), data: { turbo: false }, class: "btn btn-primary btn-sm" %>
                    </td>
                    <td class="text-start"><%= deposit.comment %></td>
                    <td class="text-start">
                      <% case deposit.tipo_ingreso %>
                        <% when "ingreso_comun" %>
                          <% if deposit.mes.present? && deposit.ano.present? %>
                            <%= Constants::MONTHS_NAMES[deposit.mes - 1] %>/<%= deposit.ano %>
                          <% else %>
                            Gastos comunes
                          <% end %>
                        <% when "ingreso_extraordinario" %>
                            Ingreso extraordinario
                        <% else %>
                            Otros ingresos
                      <% end %>
                    </td>
                    <td class="text-end"><%= number_to_currency(deposit.amount, unit: "$", delimiter: ".", precision: 0) %></td>

                    <td class="text-center">
                      <!-- Botón invisible real -->
                      <%= button_to deposit,
                          method: :delete,
                          data: { turbo: false },
                          form: { id: "deleteForm-#{deposit.id}" },
                          class: "btn btn-danger btn-sm d-none" do %>
                            <i class="fa-solid fa-trash"></i>
                          <% end %>

                      <!-- Botón visible que activa el modal -->
                      <button type="button"
                              class="btn btn-danger btn-sm"
                              data-deposit-form="deleteForm-<%= deposit.id %>"
                              data-action="click->confirm-delete-modal#showModal">
                        <i class="fa-solid fa-trash"></i>
                      </button>
                    </td>

                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        <% end %>

      <% elsif grouping == "by_month" %>

        <% grouped = @deposits.order("date ASC").group_by { |d| d.date.beginning_of_month } %>
        <% grouped.each do |month, deposits| %>
          <h3 class="mt-4"><%= l(month, format: "%B %Y") %></h3>
          <table class="table table-fixed table-bordered">
            <thead>
              <tr class="table-primary">
                <th>DEPARTAMENTO</th>
                <th>FECHA</th>
                <th>COMENTARIO</th>
                <th>TIPO</th>
                <th class="text-end">MONTO</th>
              </tr>
            </thead>
            <tbody>
              <% deposits.each do |deposit| %>
                <tr>
                  <td><%= deposit.apartment.number %></td>
                  <td><%= deposit.date.strftime("%d-%m-%Y") %></td>
                  <td><%= deposit.comment %></td>

                  <td class="text-start">
                    <% case deposit.tipo_ingreso %>
                    <% when "ingreso_comun" %>
                      <% if deposit.mes.present? && deposit.ano.present? %>
                        <%= Constants::MONTHS_NAMES[deposit.mes - 1] %>/<%= deposit.ano %>
                      <% else %>
                        Ingreso gasto común
                    <% end %>
                    <% when "ingreso_extraordinario" %>
                        Ingreso extraordinario
                    <% else %>
                        Otros ingresos
                    <% end %>
                  </td>
                  <td class="text-end">
                    <%= number_to_currency(deposit.amount, unit: "$", delimiter: ".", precision: 0) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>

      <% else %> <%# default: by_apartment_date %>

        <% grouped = @deposits.joins(:apartment)
                              .order("deposits.date ASC, deposits.created_at ASC")
                              .group_by(&:apartment)
                              .sort_by { |apartment, _| apartment.number } %>

        <% grouped.each do |apartment, deposits| %>
          <h3 class="mt-4">Departamento <%= apartment.number %></h3>

          <table class="table table-bordered table-striped">
            <thead>
              <tr class="table-primary">
                <th scope="col" class="col-1">FECHA</th>
                <th scope="col" class="col-3">COMENTARIO</th>
                <th scope="col" class="col-2">MES / TIPO INGRESO</th>
                <th scope="col" class="col-1 text-end">MONTO</th>
                <th scope="col" class="col-1 text-center">ACCIÓN</th>
              </tr>
            </thead>
            <tbody>
              <% tipo_totales = Hash.new(0) %>
              <% total_depto = 0 %>

              <% deposits.each do |deposit| %>
                <tr>
                  <td>
                    <%= link_to deposit.date.strftime("%d-%m-%Y"), edit_deposit_path(deposit), data: { turbo: false }, class: "btn btn-primary btn-sm" %>
                  </td>
                  <td class="text-start"><%= deposit.comment %></td>
                  <td class="text-start">
                    <% if deposit.tipo_ingreso == "ingreso_comun" %>
                      <%= Constants::MONTHS_NAMES[deposit.mes - 1] rescue "—" %>/<%= deposit.ano %>
                    <% elsif deposit.tipo_ingreso == "ingreso_extraordinario" %>
                      Ingreso extraordinario
                    <% else %>
                      Otros ingresos
                    <% end %>
                  </td>
                  <td class="text-end"><%= number_to_currency(deposit.amount, unit: "$", delimiter: ".", precision: 0) %></td>

                  <td class="text-center">
                    <!-- Botón invisible real -->
                    <%= button_to deposit,
                        method: :delete,
                        data: { turbo: false },
                        form: { id: "deleteForm-#{deposit.id}" },
                        class: "btn btn-danger btn-sm d-none" do %>
                          <i class="fa-solid fa-trash"></i>
                      <% end %>

                      <!-- Botón visible que activa el modal -->
                      <button type="button"
                              class="btn btn-danger btn-sm"
                              data-deposit-form="deleteForm-<%= deposit.id %>"
                              data-action="click->confirm-delete-modal#showModal">
                        <i class="fa-solid fa-trash"></i>
                      </button>
                    </td>

                </tr>

                <% tipo_totales[deposit.tipo_ingreso] += deposit.amount %>
                <% total_depto += deposit.amount %>
              <% end %>

              <% tipo_totales.each do |tipo, suma| %>
                <tr class="table-light">
                  <td colspan="3" class="text-end fw-bold"> <%= nombre_tipo_ingreso(tipo) %> </td>
                  <td class="text-end fw-bold"><%= number_to_currency(suma, unit: "$", delimiter: ".", precision: 0) %></td>
                  <td></td>
                </tr>
              <% end %>

              <tr class="table-secondary">
                <td colspan="3" class="text-end fw-bold">TOTAL</td>
                <td class="text-end fw-bold"><%= number_to_currency(total_depto, unit: "$", delimiter: ".", precision: 0) %></td>
                <td></td>
              </tr>
            </tbody>
          </table>
        <% end %>

      <% end %>
      <br>
  </div>

  <!-- Modal de confirmación -->
  <div class="modal fade"
    id="confirmDeleteModal"
    tabindex="-1"
    aria-labelledby="confirmDeleteModalLabel"
    aria-hidden="true"
    data-confirm-delete-modal-target="modal">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="confirmDeleteModalLabel">Confirma eliminación</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
        </div>
        <div class="modal-body">
          ¿Estás seguro de querer eliminar este registro?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="button"
                  class="btn btn-danger"
                  data-confirm-delete-modal-target="confirm"
                  data-action="click->confirm-delete-modal#confirmDelete">
                  Eliminar
          </button>
        </div>
      </div>
    </div>
  </div>

</div>





